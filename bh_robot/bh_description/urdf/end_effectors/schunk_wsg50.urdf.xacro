    </collision>
    <inertial>
      <origin xyz="0.05 -0.059 0" rpy="0 0 0" />
      <mass value="0.4" />
      <xacro:box_inertia x="0.05" y="-0.009" z="0.03" mass="0.4"/>
    </inertial>
  </link>

  <!-- Finger 2 -->
