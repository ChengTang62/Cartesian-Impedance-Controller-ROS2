<!-- main gripper macro -->
<xacro:macro name="schunk_wsg50" params="parent *origin">

  <!-- connector plate -->
  <joint name="gripper_connector" type="fixed">
    <xacro:insert_block name="origin"/>
    <parent link="${parent}" />
    <child link="connector_plate" />
  </joint>
  <link name="connector_plate">
    <visual>
      <origin xyz="0.01 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.09 0.09"/>
      </geometry>
      <material name="Grey"/>
    </visual>
    <collision>
      <origin xyz="0.01 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.02 0.09 0.09"/>
      </geometry>
    </collision>
  </link>

  <!-- the actual gripper main component -->
  <joint name="schunk_gripper" type="fixed">
    <origin xyz="0.02 0 0" rpy="0 0 0"/>
    <parent link="connector_plate" />
    <child link="gripper_link" />
  </joint>

  <link name="gripper_link">
    <inertial>
      <origin xyz="0.05 0 0" />
      <mass value="1.2" />
      <xacro:box_inertia x="0.0725" y="0.146" z="0.05" mass="1.2"/>
    </inertial>
    <visual>
      <!--<origin xyz="0 0 0 " rpy="0 0 1.570796327" />-->
      <origin xyz="0.03625 0 0" rpy="0 0 0" />
