        <box size="0.0725 0.146 0.05"/>
      </geometry>
    </visual>
    <collision>
      <origin xyz="0.03625 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.0725 0.146 0.05"/>
      </geometry>
    </collision>
  </link>

  <!-- Finger 1 -->
  <joint name="gripper_finger1_joint" type="fixed">
    <origin xyz="0.0725 0 0.0" rpy="0 0 0"/>
    <parent link="gripper_link" />
    <child link="finger1_link" />
  </joint>

  <link name="finger1_link">
